<table class="table table-bordered">
    <thead class="thead-dark">
        <tr class="text-center">
            <th>Sr.No.</th>
            <!-- <th>Vehicle ID</th> -->
            <th>Vehicle Number</th>
            <th>Vehicle Company</th>
            <!-- <th>Vehicle Price</th>
            <th>Vehicle Company</th>
            <th>Date of Purchase</th>
            <th>Engine Number</th>
            <th>Fuel Type</th> -->
            <th>Action</th>
            <th>Total Insurance</th>
        </tr>
    </thead>
    <tbody>
        @for (var i = 0; i < Model.Count; i++)
        {
            var vehicle = Model[i];
            <tr class="text-center">
                <td>@(i + 1)</td>
                <!-- <td>@vehicle.Vid</td> -->
                <td>@vehicle.Vno</td>
                <td>@vehicle.Vcompany</td>

                <!-- <td>@vehicle.Vprice</td>
                <td>@vehicle.Vcompany</td>
                <td>@vehicle.Date_of_Purchase</td>
                <td>@vehicle.Engine_no</td>
                <td>@vehicle.Fuel_Type</td> -->
                
                <td>
                   <a href="/Vehicle/Vehicle_View/@vehicle.Vid" class="btn btn-primary">View</a>
                   <a href="/Vehicle/Vehicle_Edit/@vehicle.Vid" class="btn btn-warning">Edit</a>
                   <a href="/Vehicle/Vehicle_Delete/@vehicle.Vid" class="btn btn-danger">Delete</a>
                </td>
                <td>
                   <a href="/Insurance/Total_Insurance/@vehicle.Vid" class="btn btn-primary">Total insurance</a>
                </td>
            </tr>
        }
    </tbody>
</table>
